<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to "参考から外す", user_relationships_path(user.id),remote: true, method: :delete, class: "btn btn-info" %>
  <% else %>
    <%= link_to "参考にする", user_relationships_path(user.id), method: :post,remote: true, class: "btn btn-success" %>
  <% end %>
 <% end %>