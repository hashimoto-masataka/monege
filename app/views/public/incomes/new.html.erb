<div class = "container-fluid">
  <div class = "row">
    <div class="col-12 mt-5">
      <h1 class= "head-line text-center mt-5">
        <i class="fas fa-money-bill-wave-alt"></i>収入登録</h1>
       
        <%= render "/layouts/error", object: @income %>
            
        <%= form_with model: @income,local: true do |f| %>
          <div class="income col-lg-9 offset-lg-3 mb-5">
            <div class="form-group">
              <strong><%=f.label :"収入金額",class: " control-label" %></strong>
              <%=f.number_field :price, required: true,class: "col-lg-4 offset-lg-2 form-control-static" %>円
              <!--required: trueで空白での送信を防ぐ-->
            </div>
            <div class="form-group">
              <strong><%= f.label :"備考欄(note)", class: 'control-label' %></strong>
              <%= f.text_field :note, class: 'col-lg-7 form-control' %>
            </div>
            <div class="form-group">
              <strong><%= f.label :created_at,"日付", class: 'control-label' %></strong>
              <%= f.date_field :created_at, class: 'col-lg-7 form-control' %>
            </div>
            <div class="form-group">
              <strong><%= f.label :family,"家族",class: "col-6 control-label" %></strong>
              <%= f.select :family_id, options_from_collection_for_select(current_user.families, :id, :family_name),class: " control-label"  %>
            </div>

            <div class="form-group">
              <%= f.submit '新規登録' ,class: "mb-5 btn-lg btn-success right" %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>

