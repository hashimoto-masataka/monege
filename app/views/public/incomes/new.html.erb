<div class = "container">
  <div class = "row">
    <div class="col-12">
      <h2 class= "head-line mt-4 ml-5">収入登録</h2>
        <div class= "error" >
              <%= column_chart Category.pluck(:income, :price) %>
               <%= pie_chart Category.pluck(:income, :price) %>
        </div>

            <%= form_with model: @income,local: true do |f| %>
              <div class="expense col-12 mt-5">
                <div class="form-group">
                  <%=f.label :"収入金額",class: "col-3 control-label" %>
                  <%=f.text_field :price, class: "col-3 form-control-static postal_code" %>円
                </div>
                <div class="form-group">
                  <%= f.label :"備考欄", class: 'control-label' %>
                  <%= f.text_field :note, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :created_at, class: 'control-label' %>
                  <%= f.date_field :created_at, class: 'form-control' %>
                </div>
                <div class="form-group">
                  <%= f.label :family,"家族",class: "col-6 control-label" %>
                  <%= f.select :family_id, options_from_collection_for_select(current_customer.families, :id, :family_name),class: "col-5 control-label"  %>
                </div>

                <div class="form-group">
                  <%= f.submit '新規登録' ,class: "offset-3 col-2 btn-lg btn-success right" %>
                </div>
              </div>
            <% end %>
    </div>
  </div>
</div>