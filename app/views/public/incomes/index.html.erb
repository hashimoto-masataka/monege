<div class = "container-fluid">
  <div class="row">
    <div class="col-7 offset-1 mt-5 ">
      <h2 class= "head-line text-center m-4 ">収入一覧</h2>
        <h3 class = "text-center">
         <%= link_to incomes_path(month: @month.prev_month) do %>
	          <i class="fas-solid fa-arrow-left"></i>
	       <% end %>
	       <%= I18n.l @current_month_beginning %>
	       <strong class="day mr-5 ml-5">~</strong>
	       <%= I18n.l @current_month_end %>
	       <%= link_to incomes_path(month: @month.next_month) do %>
	          <i class="fa-solid fa-arrow-right"></i>
	       <% end %>
	     </h3>

       <h2 class ="total mt-5">収入額の合計：
      <span class="text-success"><%= @sum_price %>円</span></h2>
      <%= link_to "新規登録",new_income_path %>
      <% if @incomes.present? %>

      <table class="table table-bordered table-hover mt-5">
      <thead>
        <tr>
          <th>日付</th>
          <th>収入金額</th>
          <th>備考欄</th>
          <th>家族名</th>
          <th colspan="2"></th>
          </tr>
      </thead>

      <% @incomes.each do |income| %>
      <tbody>
       <div class="list">
        <tr>
           <td ><%= link_to edit_income_path(income) do %>
            <%= I18n.l income.created_at, format: :short %>
            <% end %>
           </td>
          <!--config/locales/ja.ymlでcreated_atとformat: :shortを日本語表記になるように定義-->
          <td><%= income.price.floor.to_s(:delimited)%></td>
          <td><%= income.note%></td>
          <td><%= income.family.family_name %></td>
          <td class= "text-center"><%=link_to "削除する",incomes_path(income),method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
        </tr>
       </div>
      </tbody>
     <% end %>
    </table>
    <% else %>
    登録がありません
    <% end %>
   </div>
  </div>
</div>