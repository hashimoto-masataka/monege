<div class = "container-fluid">
  <div class = "row">
    <div class = "col-7 offset-3 mt-5">
      <h2>ログイン</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email ,class: "col-6 control-label"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-5 form-control-static" %>
          </div>

          <div class="field">
            <%= f.label :password ,class: "col-6 control-label"%><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

            <div class="actions">
              <%= f.submit "Log in" %>
            </div>
        <% end %>
        <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
        <%= render "public/shared/links" %>

    </div>
  </div>
</div>
