<div class="modal fade mt-5" id="logInModal">
  <div class="modal-dialog">
    <div class="modal-content background-color: bg-light">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body ">    
        <div class="container-fluid">
          <div class="row">
            <div class="col-12">
              <h1>ログイン</h1>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="field">
                  <%= f.label :email ,class: "col-6 control-label"%><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-10 form-control-static" %>
                </div>
      
                <div class="field">
                  <%= f.label :password ,class: "col-6 control-label"%><br />
                  <%= f.password_field :password, autocomplete: "current-password", class: "col-10 form-control-static" %>
                </div>
      
                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
      
                  <div class="actions">
                    <%= f.submit "Log in" %>
                  </div>
              <% end %>
              <%= link_to "パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>