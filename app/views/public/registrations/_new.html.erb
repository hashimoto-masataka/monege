<div class="modal fade mt-5" id="signUpModal">
  <div class="modal-dialog">
    <div class="modal-content background-color: bg-light">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-12 ">
              <h1>新規登録</h1>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "public/shared/error_messages", resource: resource %>
        
                  <div class="field">
                    <%= f.label :ニックネーム ,class: "col-10 control-label"%><br />
                    <%= f.text_field :name,required: true, class: "col-10 form-control-static" %>
                  </div>
                  <div class="field">
                    <%= f.label :email ,class: "col-6 control-label"%><br />
                    <%= f.email_field :email, required: true,autofocus: true, autocomplete: "email", class: "col-10 form-control-static" %>
                  </div>
          
                  <div class="field">
                    <%= f.label :password %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                    <%= f.password_field :password,required: true, autocomplete: "new-password", class: "col-10 form-control-static" %>
                  </div>
          
                  <div class="field">
                    <%= f.label :password_confirmation ,class: "col-6 control-label"%><br />
                    <%= f.password_field :password_confirmation,required: true, autocomplete: "new-password", class: "col-10 form-control-static" %>
                  </div>
          
                  <div class="actions mt-3">
                    <%= f.submit "新規登録" %>
                  </div>
                <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>