<div class = "container-fluid">
  <div class = "row">
   <div class="col-7 offset-1 mt-5">
    <h2 class= "head-line mt-4 ml-5">家族編集</h2>
    <div class= "error" >
       <%= render "/layouts/error", object: @family %>
    </div>
    <%= form_with(model: @family, url:family_path, local: true ) do |f| %>
      <div class="expense col-12 mt-5">
        <div class="form-group col-xs-12">
          <%=f.label :family_name,"家族名",class: "col-4 control-label" %>
          <%=f.text_field :family_name, required: true,class: "col-4 form-control-static postal_code" %>
        </div>

        <div class="form-group">
          <%= f.submit '更新する' ,class: "offset-3 col-4 btn-lg btn-success right" %>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
