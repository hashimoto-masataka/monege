<div class = "container-fluid">
  <div class = "row">
   <div class="col-12">
    <h2 class= "head-line text-center mt-5">家族編集</h2>
    <div class= "error" >
       <%= render "/layouts/error", object: @family %>
    </div>
    <%= form_with(model: @family, url:family_path, local: true ) do |f| %>
      <div class="col-lg-12 mt-5">
        <div class="form-group col-lg-7 offset-lg-4">
          <%=f.label :family_name,"家族名",class: "control-label" %>
          <%=f.text_field :family_name, required: true,class: "form-control-static postal_code" %>
        </div>

        <div class="form-group form-group col-lg-7 offset-lg-4">
          <%= f.submit '更新する' ,class: " btn-lg btn-success right" %>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
