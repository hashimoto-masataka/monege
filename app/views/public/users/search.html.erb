<div class ="container-fluid">
  <div class="row">
    <div class ="col-10 offset-1">
      <h2 class= "headline mt-5"><i class="fas fa-users"></i>ユーザー検索結果</h2>
      <div class="nav-link gradient4 " data-toggle="modal" data-target="#searchModal">ユーザー検索</div>
      
      	<% if current_user.name != "guestuser" %>
				  <p><%=link_to"参考にしたユーザー",user_followings_path(@user) %></p>
				  <p><%=link_to"あなたを参考にしたユーザー",user_followers_path(@user) %></p>
		  	<% end %>
        <% if @users.exists? %>
         
          <%= render 'public/users/index',users: @users %>
        <% else %>
          <h1 class="m-5">該当するユーザーはいません</h1>
        <% end %>
    </div>
  </div>
</div>

<%= render 'public/users/modal_search' %>