<div class ="container-fluid">
  <div class="row">
    <div class ="col-lg-10  offset-lg-1 mt-5">
      <h2 class= "headline mt-5"><i class="fas fa-users"></i>ユーザ一覧</h2>
      <div class="nav-link gradient4 " data-toggle="modal" data-target="#searchModal">ユーザー検索</div>
      
      	<% if current_user.name != "guestuser" %>
				  <%=link_to"参考にしたユーザー",user_followings_path(@user), class: "gradient4" %>
				  <%=link_to"あなたを参考にしたユーザー",user_followers_path(@user) , class: "gradient4"%>
		  	<% end %>
        <% if @users.exists? %>
         
          <%= render 'public/users/index',users: @users %>
        <% else %>
          <h1 class="m-5">該当するユーザーはいません</h1>
        <% end %>
    </div>
  </div>
</div>
<%= render 'public/users/modal_search' %>