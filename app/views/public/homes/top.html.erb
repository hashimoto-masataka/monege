<div class="cover">
  <div id="splash">
    <div id = "splash_text"></div>
    <div class = "loader_cover loader_cover-up"></div>
    <div class = "loader_cover loader_cover-down"></div>
  </div>
  <div class="container">
    <div class ="row">
      <div class= "col">
        <div class="text-center">
          <p class="sub-title m-2">〜お金と真摯に向き合おう〜</p>
          <h1 class="title mb-2">MONEGE</h1>
          <% if user_signed_in? %>
            <h2 class="btn btn-success ml-2"><%= link_to "マイページ", users_my_page_path(current_user) %></h2>
            <h2 class="btn btn-danger ml-2"><%= link_to "ログアウト", destroy_user_session_path,method: :delete %></h2>
          <% else %>
            <h2 class="btn btn-warning mr-2"><%= link_to "新規登録",new_user_registration_path %></h2>
            <h2 class="btn btn-success ml-2"><%= link_to "ログイン", new_user_session_path %></h2>
            <h2 class="btn btn-danger ml-2"><%= link_to "ゲスト", users_guest_sign_in_path, method: :post %></h2>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

