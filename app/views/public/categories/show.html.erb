<div class = "container">
  <div class = "row">
    <div class = "col-11 m-5">
      <h1 class= "head-line text-center m-5"><i class="fas fa-chart-pie"></i>目標家計簿詳細</h1>
    　<div class = "col-9 offset-2 plofile">
        <table class="table table-bordered table-hover ">
          <tbody>
            <tr>
        　     <td> <%= @user.name %></td>
        　     <td> <%= @user.job %></td>
        　     <td> <%= @user.age %></td>
        　     <td> <%= @user.annual_income %></td>
        　     <td> <%= @user.prefecture %></td>
        　   <% if @user.status = true %>
        　     <td><%= render 'public/relationships/btn', user: @user %></td>
        　   <% else %>
            <% end %>
         　  </tr>
          </tbody>
        </table>
    　</div>
    </div>
    <div class="col-lg-4 offset-1">
      <div class= "chart" style='width:300px; height: 300px;'>
        <canvas id="pie_chart" ></canvas>
      </div>
    </div>
    <div class="col-lg-6 mt-5 ml-4">
      <table class="table table-bordered table-hover ">
        <thead>
          <tr>
            <th>項目名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <% @categories.each do |category| %>
          <%= link_to edit_category_path(category) do %>
            <tbody>
              <tr>
                <td class = "col-2"><div style="color: <%= category.color %>;"> <%= category.category_name %></div></td>
                <td class="text-right">&yen;<%= "#{category.target_price.to_s(:delimited)} (#{((category.target_price.to_f / @sum_target_price.to_f) * 100).round(2)} %)" %>
                </td>
              </tr>
            </tbody>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>

<script>

const category_data = {
  labels: [
    <% @categories.each do | category| %>
      '<%= category.category_name %>',
    <% end %>
    ],
  datasets: [
    {
      label: 'カテゴリー表',
      data: [
        <% @categories.each do | category| %>
          '<%= category.target_price %>',
        <% end %>
      ],
    }
  ]
};

const pie_ctx = document.getElementById('pie_chart');
new Chart(pie_ctx, {
    type: 'pie',
    data: category_data,
    options: {
  /*    scales: {
        y: {
          beginAtZero: true
        }
      }
      */
    }
  });

</script>
