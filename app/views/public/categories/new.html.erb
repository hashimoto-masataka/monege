<div class = "container-fluid">
  <div class = "row">
    <div class="col-7 offset-1 mt-5">
       <h2 class= "head-line mt-4 ml-5">項目登録</h2>
      <div class= "error" >

      </div>

    <%= form_with model: @category,local: true do |f| %>
      
        <div class="form-group col-12 mt-5">
          <div class="form-group ">
          <%=f.label :category_name, "項目名",class: " control-label" %>
          <%=f.text_field :category_name, class: "col-6 ml-5 form-control-static" %>
          </div>
          <div class="form-group ">
          <%= f.label :target_price, "月の目標金額：", class: "form-label" %>
          <%= f.number_field :target_price, class:"form-control input-price" %>
          </div>
          <div class="form-group ">
          <%= f.label :color, "カテゴリカラー：", class: "form-label" %>
          <%= f.color_field :color, list: "color-list", class: "ml-5" %>
          </div>
          <div class="form-group ">
          <%= f.submit '新規登録' ,class: "offset-3 col-2 btn-lg btn-success right" %>
        </div>
        </div>
      
      <% end %>
    </div>
  </div>
</div>
