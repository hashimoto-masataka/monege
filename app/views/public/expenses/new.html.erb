<div class = "container-fluid">
  <div class = "row">
    <div class="col-12 mt-5">
      <h1 class= "head-line text-center mt-5">支出登録</h1>
   
        <%= render "/layouts/error", object: @expense %>

      <%= form_with model: @expense,local: true do |f| %>
        <div class="col-lg-9 offset-lg-3 pb-lg-5">
          <div class="form-group ">
            <strong><%=f.label :"支出金額",class: "control-label" %></strong>
            <%=f.number_field :price, required: true,class: "col-lg-5 offset-lg-1  form-control-static " %>円
            <!--required: trueで空白での送信を防ぐ-->
          </div>
          <div class="form-group">
            <strong><%= f.label :"備考欄", class: 'control-label' %></strong>
            <%= f.text_field :note, class: 'col-lg-7 form-control' %>
          </div>
          <div class="form-group">
           <strong> <%= f.label :created_at,"日付", class: 'control-label' %></strong>
            <%= f.date_field :created_at, class: 'col-7 form-control' %>
          </div>
          <div class="form-group">
            <strong><%= f.label :category, "項目",class: "col-6 control-label" %></strong>
            <%= f.select :category_id, options_from_collection_for_select(current_user.categories, :id, :category_name) ,class: "col-5 control-label" %>
            <strong> <%= f.label :family,"家族",class: "col-6 control-label" %></strong>
            <%= f.select :family_id, options_from_collection_for_select(current_user.families, :id, :family_name),class: "col-5 control-label"  %>
          </div>
          <div class="form-group">
            <%= f.submit '新規登録' ,class: "mb-5 btn-lg btn-success right" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>