<div class = "container-fluid">
  <div class = "row">
   <div class="col-7 offset-1 mt-5">
    <h2 class= "head-line mt-4 ml-5">支出編集</h2>
    <div class= "error" >

    </div>
    <%= form_with(model: @expense, url:expense_path, local: true ) do |f| %>
      <div class="expense col-12 mt-5">
        <div class="form-group col-xs-12">
          <%=f.label :price,"支出金額",class: "col-3 control-label" %>
          <%=f.number_field :price, class: "col-3 form-control-static" %>円
        </div>
        <div class="form-group">
          <%= f.label :"備考欄", class: 'control-label' %>
          <%= f.text_field :note, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :"日付", class: 'control-label' %>
          <%= f.date_field :created_at, class: 'form-control' %>
        </div>
        <div class="form-group col-12">
          <%= f.label :category, "項目",class: "col-6 control-label" %>
          <%= f.select :category_id, options_from_collection_for_select(current_user.categories, :id, :category_name) ,class: "col-5 control-label" %>
           <%= f.label :family,"家族",class: "col-6 control-label" %>
          <%= f.select :family_id, options_from_collection_for_select(current_user.families, :id, :family_name),class: "col-5 control-label"  %>
        </div>

        <div class="form-group">
          <%= f.submit '更新する' ,class: "offset-3 col-2 btn-lg btn-success right" %>
        </div>
        </div>
      <% end %>
    </div>
  </div>
</div>