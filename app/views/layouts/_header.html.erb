          <!--usersログイン時のヘッダー-->
          <% elsif user_signed_in? %>
            <li class= "nav-item active">
             <%= link_to users_my_page_path(current_user), class: "nav-link font-weight-bold" do %>
              <span> Welcome！ <%= current_user.name %>様</span>
              <% end %>
              
            </li>
            <li class="nav-item ">
              <%= link_to root_path, class: 'nav-link ' do %>
              <i class="fas fa-heading"></i>ホーム<% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_my_page_path(current_user), class: 'nav-link' do %>
              <i class="fas fa-home"></i>マイページ<% end %>
            </li>
    
           <li class="nav-item">
              <%= link_to destroy_user_session_path,method: :delete, class: 'nav-link' do %>
